<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEEEE"
    android:weightSum="1"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:layout_width="0dp"
        android:weightSum="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="0.45"
            android:background="@drawable/round_corner"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="3.8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textColor="@color/black"
                    android:background="@drawable/round_corner"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="전화번호"/>
                <TextView
                    android:textColor="@color/black"
                    android:background="@drawable/round_corner"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="010"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp" />
                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/middle_number"
                    android:maxLength="4"
                    android:background="@drawable/round_corner"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/end_number"
                    android:maxLength="4"
                    android:nextFocusDown="@id/middle_number"
                    android:background="@drawable/round_corner"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="3.8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textColor="@color/black"
                    android:background="@drawable/round_corner"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="거주지역"/>
                <Button
                    android:textColor="@color/black"
                    android:id="@+id/city"
                    android:background="@drawable/round_corner"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center" />
                <Button
                    android:textColor="@color/black"
                    android:id="@+id/district"
                    android:background="@drawable/round_corner"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="3.8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:textColor="@color/black"
                    android:background="@drawable/round_corner"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="발열체크"/>

                <Button
                    android:id="@+id/check"
                    android:text="37.1 이하"
                    android:textColor="@color/black"
                    android:background="@drawable/round_corner"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:background="@drawable/round_corner"
                    android:layout_weight="1.9"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="개인정보 제공 동의"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp" />

                <CheckBox
                    android:buttonTint="@color/black"
                    android:id="@+id/agree_check"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="0.55"
            android:background="@drawable/round_corner"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/setting"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_build_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/message"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/round_corner"
        android:layout_width="0dp"
        android:weightSum="4.7"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/num1"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                />
            <Button
                android:id="@+id/num2"
                android:onClick="onClick"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                />
            <Button
                android:id="@+id/num3"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text="3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/num4"
                android:onClick="onClick"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                />
            <Button
                android:id="@+id/num5"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                />
            <Button
                android:id="@+id/num6"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text="6"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/num7"
                android:onClick="onClick"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                />
            <Button
                android:id="@+id/num8"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                />
            <Button
                android:id="@+id/num9"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text="9"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/clear"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                />
            <Button
                android:id="@+id/num0"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                />
            <Button
                android:id="@+id/back"
                android:onClick="onClick"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text="←"
                />

        </LinearLayout>
        <Button
            android:id="@+id/finish"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:text="작성 완료"/>

    </LinearLayout>

</LinearLayout>